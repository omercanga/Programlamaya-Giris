package javaDers;

import java.util.Scanner;

public class MantikIslemleri2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner s=new Scanner(System.in);
		System.out.print("Birinci Sayıyı(a) Giriniz: ");
		int a=s.nextInt();
		System.out.print("ikinci Sayıyı(b) Giriniz: ");
		int b=s.nextInt();
		System.out.print("üçüncü Sayıyı(c) Giriniz: ");
		int c=s.nextInt();
				
		if(a==b && b==c){
			System.out.print("a,b,c sayıları birbirine eşittir");
		}
		else if(a==b&& b!=c){
			if(b>c){
				System.out.print("a,b sayıları birbirine eşittir ve c sayısından büyüktür");
			}
			else{
				System.out.print("a,b sayıları birbirine eşittir ve c sayısından küçüktür");
			}
		}
		
		else if(a!=b&& b==c){
			if(a>b){
				System.out.print("b,c sayıları birbirine eşittir ve a sayısından küçüktür");
			}
			else{
				System.out.print("b,c sayıları birbirine eşittir ve a sayısından büyüktür");
			}
		}
			
		else if(a<b){
				if(c<b){
						if(a<c){
							System.out.print(c+"sayısı"+b+"ile"+a+"arasında bir sayıdır");
						}
						else{
							System.out.print(a+"sayısı"+b+"ile"+c+"arasında bir sayıdır");
						}
					}
				else{
					System.out.print(b+"sayısı"+c+"ile"+a+"arasında bir sayıdır");								
				}
		}
		else if(b>c){
			System.out.print(b+"sayısı"+a+"ile"+c+"arasında bir sayıdır");	
		}
			
		

	}

}
