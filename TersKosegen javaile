package javaDers;

import java.util.Scanner;

public class TersKosegen {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		System.out.print("matris boyutunu giriniz : ");
		Scanner s=new Scanner(System.in);
		int n=s.nextInt();
				

		for(int i=1;i<=n;i++){
			for(int j=n;j>0;j--){
				if(i==j){
					System.out.print("1");
				}
				else
					System.out.print("0");
			}
			System.out.println("");
		}
		
	}

}
